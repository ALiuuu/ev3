<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="#27A5F9"
        android:elevation="10dp">

        <TextView
            android:id="@+id/tv_bug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:ems="1"
            android:text="连接向导"
            android:textColor="#fff"
            android:textSize="30sp"/>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_openbg"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/rl_head"
        android:background="#43D17C"
        android:elevation="10dp">

        <TextView
            android:id="@+id/tv_openbluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ems="1"
            android:text="点击打开蓝牙"
            android:textColor="#fff"
            android:textSize="20sp"/>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/rl_openbg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_paired_devices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="已配对设备"
            android:textColor="#000"/>

        <ListView
            android:id="@+id/paired_devices"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            />

        <TextView
            android:id="@+id/title_new_devices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="搜索到的设备"
            android:textColor="#000"/>

        <ListView
            android:id="@+id/new_devices"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_tittle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/shape_next_bg_red"
        android:elevation="10dp"
        android:gravity="center"
        android:text="无连接"
        android:textColor="#fff"
        android:textSize="12sp"/>

</RelativeLayout>